<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/list_place_image"
        android:layout_width="@dimen/place_list_image_width"
        android:layout_height="@dimen/place_list_image_height"
        tools:src="@drawable/sherlock"
        tools:ignore="ContentDescription"
        android:padding="@dimen/place_list_image_padding"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/place_list_padding_start_end"
        android:paddingEnd="@dimen/place_list_padding_start_end">
        <TextView
            android:id="@+id/list_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000"
            tools:text="Sherlock Homes Satatue"/>
        <TextView
            android:id="@+id/list_place_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="4 Marylebone Rd, Marylebone, London NW1 5LD, United Kingdom"/>
    </LinearLayout>
</LinearLayout>